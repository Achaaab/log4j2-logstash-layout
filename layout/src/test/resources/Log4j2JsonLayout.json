{
  "instant": "${json:timestamp:nanos}",
  "thread": "${json:thread:name}",
  "level": "${json:level}",
  "loggerName": "${json:logger:name}",
  "message": "${json:message}",
  "thrown": {
    "message": "${json:exceptionMessage}",
    "name": "${json:exceptionClassName}",
    "extendedStackTrace": "${json:exceptionStackTrace}"
  },
  "contextStack": "${json:ndc}",
  "endOfBatch": "${json:endOfBatch}",
  "loggerFqcn": "${json:logger:fqcn}",
  "contextMap": "${json:mdc}",
  "threadId": "${json:thread:id}",
  "threadPriority": "${json:thread:priority}",
  "source": {
    "class": "${json:sourceClassName}",
    "method": "${json:sourceMethodName}",
    "file": "${json:sourceFileName}",
    "line": "${json:sourceLineNumber}"
  }
}
